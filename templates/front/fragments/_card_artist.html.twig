<!-- Artists Card -->
<div class="card card-artist">
    <div class="img-zoom">
        <a href="{{ path('app_artist_read', {'id': artist.id}) }}">
            <img src="{{ artist.picture }}" class="card-img-top" alt="{{ artist.name }}">
            <div class="overlay"></div> 
            <div class="card-img-overlay d-flex flex-column justify-content-end align-items-start"> 
                <h3 class="card-title text-white roboto-font mb-0">{{ artist.name|upper }}</h3>
                <p class="card-text mb-0 white-background dark-blue-txt roboto-font">
                    {{ artist.date|date("d/m") }} - {{artist.genres}}    
                </p>
            </div>
        </a>
    </div>
</div>

