{% extends 'back/base.html.twig' %}

{% block title %}Client X{% endblock %}

{% block main %}

<main>
    <div class="container">     
      <h2 class="text-center my-5 fw-bold display-5">Détails du Client</h2>
      <div class="container mt-5">
        <div class="row justify-content-center">
          <!-- Customer Card -->
          <div class="col-md-8">
            <a href="{{path('customerBrowse')}}" class="btn btn-primary fw-bold mb-4">
              <i class="bi bi-arrow-left"></i> Retour à la liste des clients
            </a>
            <div class="card">
              <!--Card Title -->
              <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fs-2 fw-bold">
                  <i class="bi bi-person me-2"></i> Jean Dupont
                </span>
                <div class="d-flex">
                  <form action="#" method="post">
                    <button onclick="return confirm('Souhaitez-vous supprimer ce client ?');" type="submit"
                      class="btn btn-danger bi bi-trash"></button>
                  </form>
                </div>
              </div>
              <div class="card-body">
                <!-- Birthdate -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-calendar3 me-2"></i>
                  <h6 class="fw-bold mb-0">Date de naissance :</h6>
                  <p class="mb-0 ms-2">01/01/1990</p>
                </div>
                <!-- Email -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-envelope me-2"></i>
                  <h6 class="fw-bold mb-0">Email :</h6>
                  <p class="mb-0 ms-2">jean.dupont@example.com</p>
                </div>
                <!-- Phone number -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-phone me-2"></i>
                  <h6 class="fw-bold mb-0">Numéro de téléphone :</h6>
                  <p class="mb-0 ms-2">0123456789</p>
                </div>
                <!-- Address -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-geo-alt me-2"></i>
                  <h6 class="fw-bold mb-0">Adresse :</h6>
                  <p class="mb-0 ms-2">123 Rue de la Liberté</p>
                </div>
                <!-- Postcode -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-geo-alt me-2"></i>
                  <h6 class="fw-bold mb-0">Code postal :</h6>
                  <p class="mb-0 ms-2">75001</p>
                </div>
                <!-- City -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-geo-alt me-2"></i>
                  <h6 class="fw-bold mb-0">Ville :</h6>
                  <p class="mb-0 ms-2">Paris</p>
                </div>
                <!-- Bought tickets -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-ticket me-2"></i>
                  <h6 class="fw-bold mb-0">Tickets achetés :</h6>
                  <p class="mb-0 ms-2">Pass 1 Jour, Pass 2 Jours</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

{% endblock %}

