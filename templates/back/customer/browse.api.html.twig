{% extends 'back/base.html.twig' %}

{% block customerActive %}active{% endblock %}

{% block title %}Liste des Participants{% endblock %}

{% block body_class %}weezevent{% endblock %}

{% block main %}
    <div class="container">
        <h2 class="text-center my-5 fw-bold display-5">Liste des participant</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">                
                    <div class="card-header">
                        <h3 class="fs-2 fw-bold mb-0">Participant</h3>
                    </div>
                    <div class="card-body ">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col"><i class="bi bi-person me-2"></i> Id Participan</th>
                                        <th scope="col"><i class="bi bi-person me-2"></i> Pr√©nom</th>
                                        <th scope="col"><i class="bi bi-person me-2"></i> Nom</th>
                                        <th scope="col"><i class="bi bi-envelope me-2"></i> Email</th>
                                        <th scope="col"><i class="bi bi-ticket me-2"></i> Ticket</th>
                                    </tr>
                                </thead>
                                <tbody>    
                                 {% for customer in customerList %}
                                    <tr>
                                        <td scope="col">{{customer.id_participant}}</td>
                                        <td>{{customer.owner.first_name}}</td>
                                        <td>{{customer.owner.last_name}}</td>
                                        <td>{{customer.owner.email}}</td>
                                        <td>{{ticketList[customer.id_ticket]}}</td>
                                    </tr>
                                {% endfor %}                               
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
