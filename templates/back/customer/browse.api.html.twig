{# Étend la mise en page de base #}
{% extends 'back/base.html.twig' %}

{# Définit le bloc 'customerActive' pour indiquer que cette page est active dans le menu de navigation #}
{% block customerActive %}active{% endblock %}

{# Début du bloc 'main' qui contiendra le contenu principal de la page #}
{% block main %}
    <div class="container">
        <!-- Titre principal -->
        <h2 class="text-center my-5 fw-bold display-5">Liste des participant</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <!-- Titre de la carte -->
                    <div class="card-header">
                        <h3 class="fs-2 fw-bold mb-0">Participant</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col" data-sortable><i class="bi bi-person me-2"></i>Id participant</th>
                                        <th scope="col" data-sortable><i class="bi bi-person me-2"></i>Prénom</th>
                                        <th scope="col"><i class="bi bi-person me-2"></i>Nom</th>
                                        <th scope="col"><i class="bi bi-envelope me-2"></i>Email</th>
                                        <th scope="col"><i class="bi bi-ticket me-2"></i>Ticket_id</th>
                                    </tr>
                                </thead>
                                <tbody class="customer-table">
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
