<!DOCTYPE html>
<html lang="fr">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="author" content="Badri CHOULAK, Nicolas JOUBERT, Talya LALAOUI, Marjorie MARCOS">
		<meta name="”description”" content="BackOffice de O'Festival">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}O'Festival BackOffice
			{% endblock %}
		</title>

		{% block meta %}
			<!-- Additional meta tags can be added in child templates -->
		{% endblock %}

		{% block stylesheets %}
			<!-- reset CSS -->
			<link
			rel="stylesheet" href="{{ asset('css/reset_back.css') }}">
			<!-- Bootstrap CSS -->
			<link
			rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
			<!-- Bootstrap icons -->
			<link
			rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
			<!--Bootswatch Yeti-->
			<link
			rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.3/yeti/bootstrap.min.css">
			<!-- our CSS -->
			<link
			rel="stylesheet" href="{{ asset('css/ofestival_back.css') }}">
			<!-- Adumu font family -->
			<link
			href="https://fonts.cdnfonts.com/css/adumu-inline" rel="stylesheet">
			<!-- Roboto font family -->
			<link href="https://fonts.cdnfonts.com/css/roboto-condensed-3" rel="stylesheet">
		{% endblock %}

		<!-- favicon -->
		<link rel="shortcut icon" href="{{ asset('images/logo.png') }}" type="image/x-icon">

	</head>

	<body class="{% block body_class %}{% endblock %}">
		<header>
			<!-- Access to the front office -->
			<div class="d-flex justify-content-end p-1 dark-blue-bg">
				<a class="btn btn-lg btn-primary" href="{{ path('app_main_home') }}" role="button">Accéder au site</a>
			</div>

			<!-- Nav Bar -->
			<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
				<div
					class="container-fluid">
					<!-- Website Logo -->
					<a class="navbar-brand navbar-logo" href="{{ path('app_back_home') }}">
						<img src="{{ asset('images/logoBackOffice.png') }}" alt="O'Festival Logo" class="img-fluid">
					</a>
					<!-- Collapse Button -->
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<!-- Navigation Bar Content -->
					<div
						class="collapse navbar-collapse" id="navbarColor01">
						<!-- Main Navigation Menu -->
						<ul
							class="navbar-nav ms-auto mb-2 mb-lg-0">
							<!-- Dropdown Menu for Slots -->
							<li class="nav-item dropdown mx-2">
								<a class="nav-link dropdown-toggle fs-5 fw-bold {% block slotActive %}{% endblock %}" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Créneaux</a>
								<div class="dropdown-menu">
									<a class="dropdown-item fs-5" href="{{ path('app_back_slot_browse') }}">Liste</a>
									<a class="dropdown-item fs-5" href="{{ path('app_back_slot_add') }}">Ajouter</a>
								</div>
							</li>
							<!-- Dropdown Menu for Artists -->
							<li class="nav-item dropdown mx-2">
								<a class="nav-link dropdown-toggle fs-5 fw-bold {% block artistActive %}{% endblock %}" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Artiste</a>
								<div class="dropdown-menu">
									<a class="dropdown-item fs-5" href="{{ path('app_back_artist_browse') }}">Liste</a>
									<a class="dropdown-item fs-5" href="{{ path('app_back_artist_add') }}">Ajouter</a>
								</div>
							</li>
							<!-- Dropdown Menu for Genres -->
							<li class="nav-item dropdown mx-2">
								<a class="nav-link dropdown-toggle fs-5 fw-bold {% block genreActive %}{% endblock %}" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Genre</a>
								<div class="dropdown-menu">
									<a class="dropdown-item fs-5" href="{{ path('app_back_genre_browse') }}">Liste</a>
									<a class="dropdown-item fs-5" href="{{ path('app_back_genre_add') }}">Ajouter</a>
								</div>
							</li>
							<!-- Dropdown Menu for Stages -->						
							<li class="nav-item dropdown mx-2">
								<a class="nav-link dropdown-toggle fs-5 fw-bold {% block stageActive %}{% endblock %}" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Scène</a>
								<div class="dropdown-menu">
									<a class="dropdown-item fs-5" href="{{ path('app_back_stage_browse') }}">Liste</a>
									<a class="dropdown-item fs-5" href="{{ path('app_back_stage_add') }}">Ajouter</a>
								</div>
							</li>
							<!-- Dropdown Menu for Tickets -->
							<li class="nav-item dropdown mx-2">
								<a class="nav-link dropdown-toggle fs-5 fw-bold {% block ticketActive %}{% endblock %}" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Billet</a>
								<div class="dropdown-menu">
									<a class="dropdown-item fs-5" href="{{ path('app_back_ticket_browse') }}">Liste</a>
									<a class="dropdown-item fs-5" href="{{ path('app_back_ticket_add') }}">Ajouter</a>
								</div>
							</li>
							<!-- Dropdown Menu for Customers -->
							<li class="nav-item dropdown mx-2">
								<a class="nav-link dropdown-toggle fs-5 fw-bold {% block customerActive %}{% endblock %}" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Clients</a>
								<div class="dropdown-menu">
									<a class="dropdown-item fs-5" href="{{ path('app_back_customer_browse') }}">Liste</a>
									<a class="dropdown-item fs-5" href="{{ path('app_back_contact_browse') }}">Messages</a>
									<a class="dropdown-item fs-5" href="{{ path('app_back_customer_browse_api') }}">Liste participant via Api - Weezevent</a>
								</div>
							</li>
							<!-- Dropdown Menu for Sponsors -->
							<li class="nav-item dropdown mx-2">
								<a class="nav-link dropdown-toggle fs-5 fw-bold {% block sponsorActive %}{% endblock %}" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Partenaires</a>
								<div class="dropdown-menu">
									<a class="dropdown-item fs-5" href="{{ path('app_back_sponsor_browse') }}">Liste</a>
									<a class="dropdown-item fs-5" href="{{ path('app_back_sponsor_add') }}">Ajouter</a>
								</div>
							</li>
							<!-- Dropdown Menu for Admins -->
							<li class="nav-item dropdown mx-2">
								<a class="nav-link dropdown-toggle fs-5 fw-bold {% block userActive %}{% endblock %}" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administrateurs</a>
								<div class="dropdown-menu">
									<a class="dropdown-item fs-5" href="{{ path('app_back_user_browse') }}">Liste</a>
									<a class="dropdown-item fs-5" href="{{ path('app_back_user_add') }}">Ajouter</a>
								</div>
							</li>
							<!-- User Menu with Profile and Logout Options -->
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
									<span>{{ app.user.firstname }}
										{{ app.user.lastname }}</span>
									<i class="bi bi-person-square"></i>
								</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" href="{{ path('app_back_logout') }}">Déconnexion</a>
									</li>
								</ul>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<main>
			{% block main %}{% endblock %}
		</main>
		<!--Footer-->
		<footer class="bg-primary mt-5"></footer>

		{% block javascripts %}
			<!-- Bootstrap JS -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
			<!-- our JS -->
			<script type="module" src="{{ asset('js/app.js') }}" crossorigin="anonymous"></script>
			<!-- font Awesome -->
			<script src="https://kit.fontawesome.com/2789e31df4.js" crossorigin="anonymous"></script>
		{% endblock %}
	</body>
</html>
