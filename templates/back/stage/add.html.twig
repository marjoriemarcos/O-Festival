{# Étend la mise en page de base #}
{% extends 'back/base.html.twig' %}

{# Définit le bloc 'stageAddActive' pour indiquer que cette page est active dans le menu de navigation #}
{% block stageAddActive %}active{% endblock %}

{# Début du bloc 'main' qui contiendra le contenu principal de la page #}
{% block main %}
       <div class="container">
            <h2 class="text-center my-5 fw-bold display-5">Créer une nouvelle scène</h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <!-- Bouton de retour à la liste des scènes -->
                    <a href="{{ path('app_back_stage_browse') }}" class="btn btn-primary fw-bold mb-4">
                        <i class="bi bi-arrow-left"></i> Retour à la liste des scènes
                    </a>
                    <div class="card">
                        <div class="card-header fs-2 fw-bold">
                            <i class="bi bi-person-plus me-2"></i>Nouvelle scène
                        </div>
                        <div class="card-body">
                            <!-- Inclusion du formulaire pour créer une nouvelle scène -->
                            {{ include('back/fragments/_form.html.twig', {'button_label': 'Créer la scène'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
