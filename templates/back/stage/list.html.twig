{% extends "back/base.html.twig" %}

{% block title %}Liste des scènes{% endblock %}

{% block main %}
<main>
  <div class="container">      
        <h2 class="text-center my-5 fw-bold display-5">Liste des scènes</h2>
        

        <!-- Search Bar -->
        {{ include('back/fragments/_search_bar.html.twig')}}

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <!-- Card title -->
            <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="fs-2 fw-bold mb-0">Scènes</h3>      
                    <a class="btn btn-success fw-bold ms-auto" type="button" href="{{path('app_stage_new_admin')}}">Ajouter une scène</a>                   
            </div>
                    <div class="card-body">
                        <!-- No results message -->
                        {{ include('back/fragments/_noResult_message.html.twig') }}

                        <div class="table-responsive" id="tableWrapper">
                            <table class="table table-bordered searchable-table">
                                <!-- Table header -->
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col" data-sortable>Nom</th>
                                        <th class="col-1">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Loop through stageList and display them -->
                                    {% for stage in stageList %}
                                        <tr>
                                            <td>{{ stage.name }}</td>
                                            <td>
                                                <div class="d-flex">
                                                    <a href="{{ path('app_stage_edit_admin', {id: stage.id}) }}" class="btn btn-warning bi bi-pencil me-2"></a>
                                                    {{ include('back/stage/_delete_form.html.twig', {'stage': stage}) }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <div id="pagination-container" class="pagination justify-content-center">
                            {{ knp_pagination_render(stageList) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}