{% extends "back/base.html.twig" %}

{% block title %}Liste des scènes{% endblock %}

{% block main %}

<main>
    <div class="container">   
      <h2 class="text-center my-5 fw-bold display-5">Liste des Scènes</h2>
  
      <div class="container mt-5">
        <div class="row justify-content-center">
          <!-- Stage Card -->
          <div class="col-md-8">
            <div class="card">
              <!-- Card Title -->
              <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fs-2 fw-bold">Scènes</span>
                <button class="btn btn-success fw-bold" type="button">Ajouter une scène</button>
              </div>
              <div class="card-body">
                <ul class="list-group list-group-flush">
                  <!-- Stage -->
                  {% for stage in stageList %}
                  <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="d-flex align-items-center">
                        <h6 class="fw-bold mb-0">{{stage.name}}</h6>
                      </div>
                      <div class="d-flex">
                        <a href="#" class="btn btn-warning bi bi-pencil me-2"></a>
                        <form action="#" method="post">
                          <button onclick="return confirm('Souhaitez-vous supprimer cette scène?');" type="submit" class="btn btn-danger bi bi-trash"></button>
                        </form>
                      </div>
                    </div>
                  </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

{% endblock %}