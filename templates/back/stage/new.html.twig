{% extends 'back/base.html.twig' %}

{% block title %}Nouvelle scène{% endblock %}

{% block main %}
    <main>
        <div class="container">
            <h2 class="text-center my-5 fw-bold display-5">Créer une nouvelle scène</h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <a href="{{ path('app_stage_list_admin') }}" class="btn btn-primary fw-bold mb-4">
                        <i class="bi bi-arrow-left"></i> Retour à la liste des scènes
                    </a>
                    <div class="card">
                        <div class="card-header fs-2 fw-bold">
                            <i class="bi bi-person-plus me-2"></i>Nouvelle scène
                        </div>
                        <div class="card-body">
                            {{ include('back/stage/_form.html.twig', {'button_label': 'Créer la scène'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
