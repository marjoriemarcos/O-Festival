{% extends "back/base.html.twig" %}

{%block title%}Liste des genres{%endblock%}

{% block main %}
<main>
    <div class="container">
      
      <h2 class="text-center my-5 fw-bold display-5">Liste des genres musicaux</h2>
  
      <div class="container mt-5">
        <div class="row justify-content-center">
          <!-- Genre card -->
          <div class="col-md-8">
            <div class="card">
              <!-- Card title -->
              <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fs-2 fw-bold">Genres musicaux</span>
                <a class="btn btn-success fw-bold" type="button" href="{{path('app_genre_new_admin')}}">Ajouter un Genre</a>
              </div>
              <div class="card-body">
                <ul class="list-group list-group-flush">
                  <!-- Genre -->
                  {% for genre in genreList %}
                  <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="d-flex align-items-center">
                        <h6 class="fw-bold mb-0">{{genre.name}}</h6>
                      </div>
                      <div class="d-flex">
                        <a href="{{path('app_genre_edit_admin', {id: genre.id})}}" class="btn btn-warning bi bi-pencil me-2"></a>
                        {{ include('back/genre/_delete_form.html.twig', {'genre': genre}) }}
                      </div>
                    </div>
                  </li> 
                  {% endfor %}             
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
