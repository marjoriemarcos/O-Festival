{% extends 'back/base.html.twig' %}

{%block title%}Créneau {{slot.date| date('d/m/Y')}} {{slot.hour}}{%endblock%}

{% block main %}
<main>
    <div class="container">
     <h2 class="text-center my-5 fw-bold display-5">Détails du Créneau</h2>
      <div class="container mt-5">
        <div class="row justify-content-center">
          <!-- Card -->
          <div class="col-md-8">
            <a href="{{path('slotBrowse')}}" class="btn btn-primary fw-bold mb-4">
              <i class="bi bi-arrow-left"></i> Retour à la programmation
            </a>
            <div class="card">
              <!-- Card title -->
              <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fs-2 fw-bold">
                  <i class="bi bi-calendar3 me-2"></i>{{slot.date| date('d/m/Y')}}, de {{slot.hour}}
                </span>
                <div class="d-flex">
                  <a href="#" class="btn btn-warning me-2 bi bi-pencil"></a>
                  <form action="#" method="post">
                    <button onclick="return confirm('Souhaitez-vous supprimer ce crénaux ?');" type="submit"
                      class="btn btn-danger bi bi-trash"></button>
                  </form>
                </div>
              </div>
              <div class="card-body">
                <!-- Artist -->
                <div class="d-flex align-items-center">
                  <i class="bi bi-person me-2" style="font-size: 1.5rem;"></i>
                  <h6 class="fw-bold mb-0">Artiste :</h6>
                  <p class="mb-0 ms-2">{{slot.artist.name}}</p>
                </div>
                <!-- Day -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-calendar-date me-2" style="font-size: 1.5rem;"></i>
                  <h6 class="fw-bold mb-0">Jour de Passage :</h6>
                  <p class="mb-0 ms-2">{{slot.date| date('d/m/Y')}}</p>
                </div>
                <!-- Hour -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-clock me-2" style="font-size: 1.5rem;"></i>
                  <h6 class="fw-bold mb-0">Heure de Passage :</h6>
                  <p class="mb-0 ms-2">{{slot.hour}}</p>
                </div>
                <!-- Stage name -->
                <div class="d-flex align-items-center mt-3">
                  <i class="bi bi-music-note me-2" style="font-size: 1.5rem;"></i>
                  <h6 class="fw-bold mb-0">Nom de la Scène :</h6>
                  <p class="mb-0 ms-2">{{slot.stage.name}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
{% endblock %}