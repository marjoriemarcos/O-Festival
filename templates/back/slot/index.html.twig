{% extends 'back/base.html.twig' %}

{%block title%}Liste des créneaux{%endblock%}

{% block main %}
<main>
    <div class="container">      
      <h2 class="text-center my-5 fw-bold display-5">Liste des créneaux</h2>

      <div class="container mt-5">
        <div class="row justify-content-center">
          <!-- Sort per day -->
          <div class="col-md-8 mb-3">
            <button class="btn btn btn-success fw-bold mb-2" type="button">Ajouter un créneau</button>
            <div class="d-flex">
              <button class="btn btn-primary fw-bold me-2" type="button">Jour 1</button>
              <button class="btn btn-primary fw-bold me-2" type="button">Jour 2</button>
              <button class="btn btn-primary fw-bold" type="button">Jour 3</button>
            </div>
          </div>
          <!-- Slot card -->
          <div class="col-md-8">
            <div class="card">
              <!-- Card title -->        
          <div class="card-header d-flex justify-content-between align-items-center">
            <span class="fs-2 fw-bold">Jour 1</span>
            </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col"><i class="bi bi-clock me-2"></i> Heure</th>
                        <th scope="col"><i class="bi bi-person me-2"></i> Artiste</th>
                        <th scope="col"><i class="bi bi-house me-2"></i> Scène</th>
                        <th class="col-1"><i class="bi bi-gear me-2"></i> Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <!-- Slot -->
                      {% for slot in slotList %}
                      <tr>
                        <td>{{slot.hour}}</td>
                        <td>{{slot.artist.name}}</td>
                        <td>{{slot.stage.name}}</td>
                        <td>
                          <div class="d-flex">
                            <!-- Action buttons -->
                            <a href="{{path('slotRead', {id: slot.id})}}" class="btn btn-primary bi bi-search me-2"></a>
                            <form action="#" method="post">
                              <button onclick="return confirm('Souhaitez-vous supprimer cette entrée ?');" type="submit"
                                class="btn btn-danger bi bi-trash"></button>
                            </form>
                          </div>
                        </td>
                      </tr> 
                      {% endfor %}                                           
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        
        </div>
      </div>
    </div>
</main>

{% endblock %}