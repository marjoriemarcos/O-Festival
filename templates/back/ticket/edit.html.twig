{% extends 'back/base.html.twig' %}

{% block ticketActive %}active{% endblock %}

{% block title %}Éditer un billet{% endblock %}

{% block main %}
	<div class="container">
		<h2 class="text-center my-5 fw-bold display-5">Éditer le billet</h2>
		<div class="row justify-content-center">
			<div class="col-md-8">
				<!-- Link to ticket -->
				<a href="{{ path('app_back_ticket_read', { id: ticket.id }) }}" class="btn btn-primary fw-bold mb-4">
					<i class="bi bi-arrow-left"></i>
					Retour au détails du billet
				</a>
                    {# Flash Messages Fragment #}
                    {{ include('back/fragments/_message.html.twig') }}
                    <div class="card">
                        <!-- Card header -->
                        <div class="card-header d-flex justify-content-between align-items-center">                          
                            <span class="fs-2 fw-bold">{{ ticket.title }}</span>
                            <!-- Delete Button -->
                            <div class="d-flex">
                                <form method="post" action="{{ path('app_back_ticket_delete', {'id': ticket.id}) }}" onsubmit="return confirm('Voulez-vous supprimer {{ ticket.title}}?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
                                    <button class="btn btn-danger bi bi-trash">{{ button_label|default('')}}</button>
                                </form>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Edit Form Ticket -->
                            {{ include('back/fragments/_form.html.twig', {'ticket': ticket, 'button_label': 'Mettre à jour'}) }}
                        </div>
                    </div>
			</div>
		</div>
	</div>
{% endblock %}
