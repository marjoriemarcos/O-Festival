{% extends 'back/base.html.twig' %}

{% block ticketActive %}active{% endblock %}

{% block title %} Ajouter un billet {% endblock %}

{% block main %}
    <div class="container">        
        <h2 class="text-center my-5 fw-bold display-5">Ajouter un Billet</h2>
        <div class="container mt-5">
            <div class="row justify-content-center">            
                <div class="col-md-8">
                    {# Flash Messages Fragment #}
                    {{ include('back/fragments/_message.html.twig') }}
                    <!-- Ticket List Button -->
                    <a href="{{ path('app_back_ticket_browse') }}" class="btn btn-primary fw-bold mb-4">
                        <i class="bi bi-arrow-left"></i> Retour à la liste des billets
                    </a>
                    <div class="card">                        
                        <div class="card-header fs-2 fw-bold">                            
                            <i class="bi bi-person-plus me-2"></i>Nouveau billet
                        </div>
                        <div class="card-body">
                            <!-- New Ticket Form  -->
                            {{ include('back/fragments/_form.html.twig', {'button_label': 'Créer le billet'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
