{# Étend la mise en page de base #}
{% extends 'back/base.html.twig' %}

{# Définit le bloc 'ticketActive' pour indiquer que cette page est active dans le menu de navigation #}
{% block ticketActive %}active{% endblock %}

{# Début du bloc 'main' qui contiendra le contenu principal de la page #}
{% block main %}
    <div class="container">
        <h2 class="text-center my-5 fw-bold display-5">Liste des Billets</h2>

        <div class="container mt-5">
            <div class="row justify-content-center">
                <!-- Filtrer par jour -->
                <div class="col-md-8 mb-3">
                    {# Inclusion du fragment pour afficher les messages de succès ou d'erreur #}
                    {{ include('back/fragments/_message.html.twig') }}
                    <div class="d-flex">
                        <!-- Boutons de filtre pour la durée des billets -->
                        <button class="btn btn-primary fw-bold me-2 filter-button selected" data-duration="all" type="button">Tous les billets</button>
                        <button class="btn btn-primary fw-bold me-2 filter-button" data-duration="24" type="button">Pass 1 Jour</button>
                        <button class="btn btn-primary fw-bold me-2 filter-button" data-duration="48" type="button">Pass 2 Jours</button>
                        <button class="btn btn-primary fw-bold filter-button" data-duration="72" type="button">Pass 3 Jours</button>
                    </div>
                </div>
                <!-- Carte de billet -->
                <div class="col-md-8">
                    <div class="card">
                        <!-- Titre du billet -->
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fs-2 fw-bold" id="duration-title">Tous les pass</span>
                            </div>
                            <!-- Bouton pour ajouter un billet -->
                            <a class="btn btn-success fw-bold" type="button" href="{{path('app_back_ticket_add')}}">Ajouter un Billet</a>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-hover searchable-table" id="tableWrapper">
                                <thead class="thead-dark">
                                    <tr>
                                        <!-- En-têtes de colonne -->
                                        <th class="col-5" data-sortable>
                                            <i class="bi bi-file-earmark-text me-2"><a href="#" class="btn" role="button" data-bs-toggle="button">Titre</a></i>
                                        </th>
                                        <th class="col-1" data-sortable>
                                            <i class="bi bi-currency-euro me-2"><a href="#" class="btn" role="button" data-bs-toggle="button">Prix</a></i>
                                        </th>
                                        <th class="col-1" data-sortable>
                                            <i class="bi bi-box-seam me-2"><a href="#" class="btn" role="button" data-bs-toggle="button">Quantité</a></i>
                                        </th>
                                        <th class="col-1">
                                            <i class="bi bi-gear me-2"><a href="#" class="btn" role="button" data-bs-toggle="button">Action</a></i>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="tickets-table-body">
                                    <!-- Boucle à travers la liste des billets et les affiche -->
                                    {% for ticket in ticketList %}
                                        <tr data-duration="{{ ticket.duration }}">
                                            <td>{{ ticket.title }}</td>
                                            <td>{{ ticket.price }}€</td>
                                            <td>{{ ticket.quantity }}</td>
                                            <td>
                                                <div class="d-flex">
                                                    <!-- Boutons d'action -->
                                                    <a href="{{ path('app_back_ticket_read', {id: ticket.id}) }}" class="btn btn-primary bi bi-search me-2"></a>
                                                    <form method="post" action="{{ path('app_back_ticket_delete', {'id': ticket.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer {{ ticket.title }}?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
                                                        <button class="btn btn-danger bi bi-trash">{{ button_label|default('')}}</button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
                         
