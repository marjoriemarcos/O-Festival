{% extends 'back/base.html.twig' %}

{% block title %}Éditer l'artiste {{ artist.name }}{% endblock %}

{% block main %}
    <main>
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="container">
            <h2 class="text-center my-5 fw-bold display-5">Éditer Artiste</h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <a href="{{ path('app_artist_list_admin') }}" class="btn btn-primary fw-bold mb-4">
                        <i class="bi bi-arrow-left"></i> Retour à la liste des artistes
                    </a>
                    <div class="card">
                        <!-- Card title -->
                        <div class="card-header fs-2 fw-bold">
                            <i class="bi bi-calendar3 me-2"></i>Éditer l'artiste
                        </div>
                        <div class="card-body">
                            <!-- Include the form for editing a artist -->
                            {{ include('back/artist/_form.html.twig', {'artist': artist, 'button_label': 'Mettre à jour'}) }}
                        </div>
                        <!-- Card footer (containing buttons) -->
                        <div class="card-footer">
                            <!-- Include the form for deleting a artist -->
                            {{ include('back/artist/_delete_form.html.twig', {'artist': artist, 'button_label': 'Supprimer'}) }}
                        </div>
                    </div>
                </div>
            </div>
    </main>
{% endblock %}
