{# Étend la mise en page de base #}
{% extends 'back/base.html.twig' %}

{# Définit le bloc 'artistActive' pour indiquer que cette page est active dans le menu de navigation #}
{% block artistActive %}active{% endblock %}

{# Début du bloc 'main' qui contiendra le contenu principal de la page #}
{% block main %}
    <div class="container">
        {# Titre de la page #}
        <h2 class="text-center my-5 fw-bold display-5">Éditer l'Artiste</h2>
        <div class="row justify-content-center">
            <div class="col-md-8">
                {# Lien de retour aux détails de l'artiste #}
                <a href="{{ path('app_back_artist_read', { id: artist.id }) }}" class="btn btn-primary fw-bold mb-4">
                    <i class="bi bi-arrow-left"></i>
                    Retour au détails de l'Artiste
                </a>
                {# Inclusion du fragment pour afficher les messages de succès ou d'erreur #}
                {{ include('back/fragments/_message.html.twig') }}
                <div class="card">
                    {# En-tête de la carte avec le nom de l'artiste et un bouton pour supprimer l'artiste #}
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fs-2 fw-bold">{{ artist.name }}</span>
                        <div class="d-flex">
                            {# Formulaire pour supprimer l'artiste #}
                            <form method="post" action="{{ path('app_back_artist_delete', {'id': artist.id}) }}" onsubmit="return confirm('Voulez-vous supprimer {{ artist.name }}?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artist.id) }}">
                                <button class="btn btn-danger bi bi-trash">{{ button_label|default('') }}</button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        {# Inclusion du formulaire pour éditer l'artiste, avec un label de bouton personnalisé #}
                        {{ include('back/fragments/_form.html.twig', {'artist': artist, 'button_label': 'Mettre à jour'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
