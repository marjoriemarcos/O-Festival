{% extends 'back/base.html.twig' %}

{% block title %}Nouvel Artiste{% endblock %}

{% block main %}
    <main>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}


        <div class="container">
            <h2 class="text-center my-5 fw-bold display-5">Créer un nouvel artiste</h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <a href="{{ path('app_artist_list_admin') }}" class="btn btn-primary fw-bold mb-4">
                        <i class="bi bi-arrow-left"></i> Retour à la liste des artistes
                    </a>
                    <div class="card">
                        <div class="card-header fs-2 fw-bold">
                            <i class="bi bi-person-plus me-2"></i>Nouvel Artiste
                        </div>
                        <div class="card-body">
                            {{ include('back/artist/_form.html.twig', {'button_label': 'Créer l\'artiste'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
