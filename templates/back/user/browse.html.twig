{# Étend la mise en page de base #}
{% extends 'back/base.html.twig' %}

{# Définit le bloc 'userBrowseActive' pour indiquer que cette page est active dans le menu de navigation #}
{% block userBrowseActive %}active{% endblock %}

{# Début du bloc 'main' qui contiendra le contenu principal de la page #}
{% block main %}

    <div class="container">
        <h2 class="text-center my-5 fw-bold display-5">Liste des administrateurs</h2>
        
        {# Barre de recherche incluse à partir d'un fragment #}
        {{ include('back/fragments/_search_bar.html.twig') }}

        <div class="row justify-content-center">
            <div class="col-md-8">
                {# Inclusion du fragment pour afficher les messages de succès ou d'erreur #}
                {{ include('back/fragments/_message.html.twig') }}
                <div class="card">
                    <!-- Card title -->
                    <div class="card-header">
                        <h3 class="fs-2 fw-bold mb-0">Administrateurs</h3>
                    </div>
                    <div class="card-body">
                        <!-- No results message -->
                        {{ include('back/fragments/_noResult_message.html.twig') }}

                        <div class="table-responsive" id="tableWrapper">
                            <table class="table table-bordered searchable-table">
                                <!-- Table header -->
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col"><i class="bi bi-person me-2"></i>Nom</th>
                                        <th scope="col"><i class="bi bi-person me-2"></i>Prénom</th>
                                        <th scope="col"><i class="bi bi-envelope me-2"></i>Email</th>
                                        <th scope="col"><i class="bi bi-lock me-2"></i>Mot de passe</th>
                                        <th scope="col"><i class="bi bi-person-check me-2"></i>Rôle</th>
                                        <th class="col-1"><i class="bi bi-gear me-2"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Boucle à travers la liste des administrateurs et les affiche -->
                                    {% for admin in adminList %}
                                        <tr>
                                            <td>{{ admin.lastname }}</td>
                                            <td>{{ admin.firstname }}</td>
                                            <td>{{ admin.email }}</td>
                                            <td>*********</td> {# Mot de passe masqué #}
                                            <td>{{ admin.roles | join(', ') }}</td>
                                            <td>
                                                <div class="d-flex me-2">
                                                    <!-- Bouton d'action pour supprimer un administrateur -->
                                                    <form method="post" action="{{ path('app_back_user_browse', {'id': admin.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer {{ admin.lastname }} {{ admin.firstname }}?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ admin.id) }}">
                                                        <button class="btn btn-danger bi bi-trash">{{ button_label|default('')}}</button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
