{% extends 'front/base.html.twig' %}


{% block loginActive %}active{% endblock %}

{% block title %}Connexion{% endblock %}

{% block main %}
    <div class="container-connextion medium-blue-bg">
       
        <h2 class="page-title adumu-font text-center text-light mb-0">O'Festival</h2>

        <!-- Login Form -->
        <div class="container-contact px-5 pb-5">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card shadow-lg">
                        <div class="card-body p-5 mt-0">
                            <form method="post">
                                {# Error Messages #}
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {# Success Message #}
                                {% if app.user %}
                                    <div class="mb-3">
                                        You are logged in as {{ app.user.userIdentifier }},
                                        <a href="{{ path('app_back_logout') }}">Logout</a>
                                    </div>
                                {% endif %}
                              
                                <div class="text-center dark-blue-txt mb-4">
                                    <h2>Me connecter</h2>
                                </div>

                                <!-- Email Field -->
                                <div class="form-group mb-3">
                                    <label for="username" class="form-label text-dark">Email</label>
                                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="ex : jeanjacques@goldman.fr">
                                </div>

                                <!-- Password field -->
                                <div class="form-group mb-4">
                                    <label for="password" class="form-label text-dark">Mot de passe</label>
                                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="Tapez votre mot de passe">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                </div>

                                <!-- Login Button -->
                                <div class="text-center">
                                    <button class="btn btn-primary light-yellow-bg dark-blue-txt" type="submit">
                                        Connexion
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}